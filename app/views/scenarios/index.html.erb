<h1>Listing scenarios</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Picture</th>
    <th>All gps</th>
    <th>Gps per team</th>
    <th>All camera</th>
    <th>Camera per team</th>
    <th>All phone</th>
    <th>Phone per team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scenarios.each do |scenario| %>
  <tr>
    <td><%= scenario.title %></td>
    <td><%= scenario.description %></td>
    <td><%= scenario.picture %></td>
    <td><%= scenario.all_gps %></td>
    <td><%= scenario.gps_per_team %></td>
    <td><%= scenario.all_camera %></td>
    <td><%= scenario.camera_per_team %></td>
    <td><%= scenario.all_phone %></td>
    <td><%= scenario.phone_per_team %></td>
    <td><%= link_to 'Show', scenario %></td>
    <td><%= link_to 'Edit', edit_scenario_path(scenario) %></td>
    <td><%= link_to 'Destroy', scenario, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

